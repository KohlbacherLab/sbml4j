<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="SBML4JConfig" packages="*">
  <Properties>
  
    <Property name="filename_root">root.log</Property>
    <Property name="filename_jsbml">jsbml_test.log</Property>
	<Property name="filename_application">application.log</Property>
    <Property name="filename_spring">spring.log</Property>
    <Property name="filename_db">db_conn.log</Property>
  </Properties>
  <ThresholdFilter level="debug"/>
 
  <Appenders>
    <Console name="console">
      <PatternLayout pattern="%5p (%F:%L) - %m%n"/>
    </Console>
     <File name="file_root" fileName="logs/${filename_root}">
      <PatternLayout>
        <pattern>%d %p %C{1.} [%t] %m%n</pattern>
      </PatternLayout>
    </File>
    <File name="file_jsbml" fileName="logs/${filename_jsbml}">
      <PatternLayout>
        <pattern>%d %p %C{1.} [%t] %m%n</pattern>
      </PatternLayout>
    </File>
    <File name="file_application" fileName="logs/${filename_application}">
      <PatternLayout>
        <pattern>%d %p %C{1.} [%t] %m%n</pattern>
      </PatternLayout>
    </File>
    <File name="file_spring" fileName="logs/${filename_spring}">
      <PatternLayout>
        <pattern>%d %p %C{1.} [%t] %m%n</pattern>
      </PatternLayout>
    </File>
    <File name="file_db" fileName="logs/${filename_db}">
      <PatternLayout>
        <pattern>%d %p %C{1.} [%t] %m%n</pattern>
      </PatternLayout>
    </File>
  </Appenders>
 
  <Loggers>
    <Logger name="org.sbml" level="all" additivity="false">
      <AppenderRef ref="file_jsbml"/>
    </Logger>
    <Logger name="org.springframework" level="all" additivity="false">
      <AppenderRef ref="file_spring"/>
    </Logger>
     <Logger name="org.tts" level="all" additivity="false">
      <AppenderRef ref="file_application"/>
    </Logger>
     <Logger name="org.neo4j.ogm.drivers.bolt" level="all" additivity="false">
      <AppenderRef ref="file_db"/>
    </Logger>
	<Logger name="org.springframework" level="info" additivity="false">
      <AppenderRef ref="console"/>
    </Logger>
     <Logger name="org.tts" level="info" additivity="false">
      <AppenderRef ref="console"/>
    </Logger>
     <Logger name="org.neo4j.ogm.drivers.bolt" level="info" additivity="false">
      <AppenderRef ref="console"/>
    </Logger>
    <Root level="all">
      <AppenderRef ref="file_root"/>
    </Root>
  </Loggers>
 
</Configuration>
